# Utiliser un argument pour la version de CrowdSec
ARG CROWDSEC_VERSION=v1.6.2
FROM crowdsecurity/crowdsec:${CROWDSEC_VERSION}

# Copier le script d'entrypoint
COPY entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# Copier le fichier de secrets pour l'installation initiale
COPY secrets /etc/crowdsec/secrets

# Exposer le port du dashboard
EXPOSE 3000

# DÃ©finir l'entrypoint
ENTRYPOINT ["/entrypoint.sh"]
